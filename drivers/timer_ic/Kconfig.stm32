config TIMER_IC_STM32
	bool "STM32 timer input capture driver"
	default y
	depends on DT_HAS_ST_STM32_TIMER_IC_ENABLED
	select USE_STM32_LL_TIM
	select USE_STM32_LL_RCC if SOC_SERIES_STM32F4X || SOC_SERIES_STM32F7X || SOC_SERIES_STM32H7X
	help
	  Enable timer input capture driver for STM32 SoCs